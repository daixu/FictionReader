<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivHeadIcon"
        android:layout_width="@dimen/comment_user_head_height"
        android:layout_height="@dimen/comment_user_head_height"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/default_head"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivHeadIcon"
        android:layout_toRightOf="@+id/ivHeadIcon"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="神雕侠女"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/txt_size_h4" />

    <TextView
        android:id="@+id/tvMessge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/ivHeadIcon"
        android:layout_toRightOf="@+id/ivHeadIcon"
        android:text="金庸"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/txt_size_h3" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMessge"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivHeadIcon"
        android:layout_toRightOf="@+id/ivHeadIcon"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/txt_size_h2" />
</RelativeLayout>